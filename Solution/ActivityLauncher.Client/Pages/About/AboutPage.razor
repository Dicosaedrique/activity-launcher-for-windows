@inject IStringLocalizer<AboutPageLocales> Localize

@attribute [Route(Routes.AboutPage)]

<MudContainer MaxWidth="MaxWidth.Large">
    <MudText Typo="Typo.h4" Class="mb-6">@Localize["Title"]</MudText>

    <MudText Class="mb-6" Typo="Typo.body1">@Localize["Description"]</MudText>
    
    <MudText Class="mb-1" Typo="Typo.h6" Color="Color.Error">@Localize["Disclaimer.Title"]</MudText>
    <MudText Class="mb-6" Typo="Typo.body1" Color="Color.Error">@(new MarkupString(Localize["Disclaimer.Content"]))</MudText>
    
    <MudText Class="mb-1" Typo="Typo.h6">@Localize["Startup.Setup"]</MudText>
    <MudText Class="mb-16" Typo="Typo.body1">@(new MarkupString(Localize["Startup.Setup.Instructions"]))</MudText>
    
    <MudText Class="mb-1" Typo="Typo.h6">@Localize["About.Title"]</MudText>
    <MudText Typo="Typo.body1">@(new MarkupString(Localize["About.Description"]))</MudText>
</MudContainer>
