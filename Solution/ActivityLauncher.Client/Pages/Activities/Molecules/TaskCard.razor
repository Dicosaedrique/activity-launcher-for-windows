@using ActivityLauncher.Client.Pages.Activities.Molecules.Tasks;

@switch (Task)
{
    case ExplorerFolderTask explorerFolderTask:
        <ExplorerFolderTaskCard Task="explorerFolderTask" EditMode="EditMode" OnRemove="OnRemove" />
        break;
    case ProgramTask programTask:
        <ProgramTaskCard Task="programTask" EditMode="EditMode" OnRemove="OnRemove" />
        break;
    case ScriptTask scriptTask:
        <ScriptTaskCard Task="scriptTask" EditMode="EditMode" OnRemove="OnRemove" />
        break;
    case TerminalTask terminalTask:
        <TerminalTaskCard Task="terminalTask" EditMode="EditMode" OnRemove="OnRemove" />
        break;
    case VSCodeTask vSCodeTask:
        <VSCodeTaskCard Task="vSCodeTask" EditMode="EditMode" OnRemove="OnRemove" />
        break;
    case OpenFileTask openFileTask:
        <OpenFileTaskCard Task="openFileTask" EditMode="EditMode" OnRemove="OnRemove" />
        break;
}

@code {
    [Parameter]
    public ITask Task { get; set; } = null!;

    [Parameter]
    public bool EditMode { get; set; } = false;

    [Parameter]
    public EventCallback OnRemove { get; set; }
}
