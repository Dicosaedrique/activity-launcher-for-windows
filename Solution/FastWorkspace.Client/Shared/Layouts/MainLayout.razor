@inherits LayoutComponentBase

@inject IAppConfiguration AppConfiguration

<MudLayout>
    @if (AppConfiguration.IsAppReady())
    {
        <MudDrawer Open>
            <NavMenu />
        </MudDrawer>
    }
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
